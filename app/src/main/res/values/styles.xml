<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="EditablesStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NumberQuestionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/size_24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/space_16dp</item>
        <item name="android:paddingBottom">@dimen/space_8dp</item>
    </style>

    <style name="QuestionsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/space_8dp</item>
    </style>

    <style name="AnswersStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/space_12dp</item>
        <item name="android:paddingTop">@dimen/space_12dp</item>
        <item name="android:paddingLeft">@dimen/space_12dp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:paddingBottom">@dimen/space_12dp</item>
        <item name="android:fontFamily">serif-monospace</item>
    </style>

    <style name="ButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/space_24dp</item>
        <item name="android:layout_marginBottom">@dimen/space_12dp</item>
        <item name="android:padding">@dimen/space_18dp</item>
        <item name="android:textColor">@color/colorBackground</item>
    </style>
</resources>
